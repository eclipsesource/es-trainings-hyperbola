<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="protocols" name="Chat Protocols" schema="schema/protocols.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipsercp.hyperbola.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="org.eclipsercp.hyperbola.Perspective"
            id="org.eclipsercp.hyperbola.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipsercp.hyperbola.ContactsView"
            icon="icons/groups.gif"
            id="org.eclipsercp.hyperbola.views.contacts"
            name="Contacts"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipsercp.hyperbola.ChatEditor"
            default="false"
            icon="icons/chat.gif"
            id="org.eclipsercp.hyperbola.editors.chat"
            name="Chat Editor">
      </editor>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipsercp.hyperbola.application"
            name="Hyperbola">
         <property
               name="appName"
               value="Hyperbola">
         </property>
         <property
               name="aboutImage"
               value="branding/about.gif">
         </property>
         <property
               name="aboutText"
               value="Hyperbola Chat&#x0A;&#x0A;Version 1.0.0&#x0A;&#x0A;(c) Copyright 2005-2013, Jeff Mc Affer, &#x0A;Jean-Michel Lemieux and others.&#x0A;All rights reserved.">
         </property>
         <property
               name="windowImages"
               value="branding/hyperbola16.gif,branding/hyperbola32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.eclipsercp.hyperbola.editors.chat.actions"
            targetID="org.eclipsercp.hyperbola.editors.chat">
         <action
               class="org.eclipsercp.hyperbola.BackgroundColorAction"
               icon="icons/color.png"
               id="org.eclipsercp.hyperbola.action"
               label="Background Color"
               menubarPath="file/additions"
               style="push"
               toolbarPath="additions">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.file.exit"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+Q">
      </key>
      <key
            commandId="org.eclipsercp.hyperbola.addcontact"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+1">
      </key>
      <key
            commandId="org.eclipsercp.hyperbola.chat"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+2">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipsercp.hyperbola.addcontact"
            name="Add Contact...">
      </command>
      <command
            id="org.eclipsercp.hyperbola.chat"
            name="Chat">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.eclipsercp.hyperbola.addcontact"
            icon="icons/add_contact.gif">
      </image>
      <image
            commandId="org.eclipsercp.hyperbola.chat"
            icon="icons/chat.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipsercp.hyperbola.views.contacts">
         <command
               commandId="org.eclipsercp.hyperbola.addcontact"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipsercp.hyperbola.chat"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipsercp.hyperbola.views.contacts">
         <command
               commandId="org.eclipsercp.hyperbola.addcontact"
               style="push">
         </command>
         <command
               commandId="org.eclipsercp.hyperbola.chat"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
